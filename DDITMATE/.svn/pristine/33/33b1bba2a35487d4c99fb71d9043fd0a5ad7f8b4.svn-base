main {
	padding-top: 100px;
	display: flex;
	justify-content: center;
}

.formBox {
	border: rgb(192, 168, 135) solid 3px;
	border-radius: 10px;
	background-color: rgb(248, 242, 234);
}

.joinForm {
	width: 500px;
}

.error {
	margin-top: 3px;
	color: red;
	font-size: small;
	font-weight: bold;
}

.textForm {
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 2px;
}

.mb-3 {
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 9px;
	padding-bottom: 14px;
	font-size: 13px;
}

.filebox .upload-name {
	display: inline-block;
	width: 100px;
	height: 30px;
	padding: 0 10px;
	vertical-align: middle;
	border: 2px solid #aaa;
	border-radius: 4px;
	color: #999999;
}

.filebox label {
	display: inline-block;
	font-size: 13px;
	width: 80px;
	border: none;
	border-radius: 4px;
	padding: 10px 10px;
	color: #fff;
	vertical-align: middle;
	background-color: rgb(129, 112, 91);
	cursor: pointer;
	height: 15px;
	margin-left: 10px;
}

.filebox input[type="file"] {
	position: absolute;
	width: 0;
	height: 0;
	padding: 0;
	overflow: hidden;
	border: 0;
}

h2 {
	text-align: center;
}

input[type=text], [type=password], [type=email], [type=tel] {
	width: 200px;
	border: 2px solid #aaa;
	border-radius: 4px;
	margin: 8px 0;
	outline: none;
	padding: 8px;
	box-sizing: border-box;
	transition: .3s;
}

input[type=date] {
	width: 114px;
	border: 2px solid #aaa;
	border-top-right-radius: 4px;
	border-bottom-right-radius: 4px;
	margin: 8px 0;
	outline: none;
	padding: 8px;
	box-sizing: border-box;
}

body {
	height: 100vh;
	width: 100vw;
	text-align: center;
	position: relative;
	z-index: 1;
	margin: 0;
	background-repeat: no-repeat;
	background-size: cover;
}

body::after {
	height: 150vh;
	width: 100vw;
	content: "";
	background: url("./../image/joinbackimg.jpg");
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
	opacity: 0.5;
	margin: 0;
	background-repeat: repeat;
	background-size: cover;
}

.btn {
	display: inline-block;
	padding: 10px 10px;
	color: #fff;
	vertical-align: middle;
	background-color: rgb(129, 112, 91);
	cursor: pointer;
	height: 15px;
	margin-left: 10px;
	margin-bottom: 23px;
	padding-bottom: 27px;
	border-radius: 4px;
	border: none;
}

.form-label {
	border: 2px solid #aaa;
	border-top-left-radius: 4px;
	border-bottom-left-radius: 4px;
	padding-top: 30px;
	padding-bottom: 30px;
	padding-left: 2px;
	padding-right: 2px;
	background-color: rgb(223, 207, 185);
}

#tab {
	border: solid #aaa 2px;
	padding: 7.5px;
	padding-right: 12px;
	border-top-left-radius: 4px;
	border-bottom-left-radius: 4px;
	font-size: 14px;
	background-color: rgb(223, 207, 185);
}

#tab2 {
	border: solid #aaa 2px;
	padding: 7.5px;
	padding-left: 16px;
	padding-right: 18px;
	border-top-left-radius: 4px;
	border-bottom-left-radius: 4px;
	font-size: 14px;
	background-color: rgb(223, 207, 185);
}